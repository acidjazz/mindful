/* purgecss start ignore */

json('../../package.json')

@import keyframes
@import animations
@import transitions
@import viewport

.bg-beach
  background-color config-colors-allports
  @media (min-width: 1024px)
    opacity 1
    background url(/beach.jpg)
    background-size cover
    background-position 50% 100%

.bg-white-50
  background-color rgba(config-colors-white, 0.8)

.text-shadow
  text-shadow 1px 1px 2px config-colors-allports, -1px -1px 2px config-colors-seagreen

html, body
  @apply font-merri
a
  text-decoration none

.lottieMenu
  transform scale(2) !important
  path
    fill config-colors-allports !important


.hl-tran
  -webkit-tap-highlight-color transparent

/* purgecss end ignore */


